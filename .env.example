# ===================================
# Environment Variables Template
# ===================================
#
# Copy this file to .env and fill in your values
# 
# Command: cp .env.example .env
#
# IMPORTANT: Never commit .env files to version control!
# ===================================

# ===== Server Configuration =====
NODE_ENV=development
PORT=3000

# ===== Database Configuration =====
# Docker Compose: mongodb://admin:admin123@mongodb:27017/learning-platform?authSource=admin
# Local Development: mongodb://localhost:27017/learning-platform
MONGODB_URI=mongodb://localhost:27017/learning-platform

# Database Connection Pool
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=5
DB_SERVER_SELECTION_TIMEOUT_MS=30000
DB_SOCKET_TIMEOUT_MS=45000
DB_MAX_RETRIES=5
DB_RETRY_DELAY_MS=5000

# ===== JWT Configuration =====
# CRITICAL: Change this in production! Use a strong random string
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# ===== Security =====
# Higher values = more secure but slower (10-12 recommended for production)
BCRYPT_SALT_ROUNDS=12

# ===== Rate Limiting =====
# Window in milliseconds (15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ===== CORS Configuration =====
# * = allow all origins (development only)
# Production: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGIN=*

# ===== Logging =====
# Levels: error, warn, info, verbose, debug
LOG_LEVEL=info

# ===== MongoDB Configuration (Docker Compose) =====
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=admin123
MONGODB_APP_USERNAME=appuser
MONGODB_APP_PASSWORD=apppassword123
